[Unit]
Description=Aggregator gunicorn server
After=network.target

[Service]
User=aggregator
Group=aggregator-group
WorkingDirectory=/app
ExecStart=/bin/bash -c 'source /app/flask-aggregator/bin/activate && gunicorn -w 10 -b 127.0.0.1:8000 flask_aggregator.front.app:app && deactivate'

[Install]
WantedBy=multi-user.target